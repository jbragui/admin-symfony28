<div class="modal modalnoajax fade" id="gallerybrowser" tabindex="-1" role="dialog" aria-labelledby="" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title">Galería de imágenes</h4>
            </div>
            <div class="modal-body">
                <!-- tool box -->
                <div class="well-xs" id="tools">
                    <a class="btn btn-default" id="upload-button"><i class="fa fa-upload"></i> <span class="hidden-xs">Subir</span></a>
                    <a class="btn btn-default" id="new-folder-button"><i class="fa fa-folder-o"></i> <span class="hidden-xs">Nueva carpeta</span></a>
                    <a class="btn btn-default" id="refresh-button"><i class="fa fa-refresh"></i> <span class="hidden-xs">Actualizar</span></a>
                </div>

                <!-- breadcrumb -->
                <ol class="breadcrumb" id="breadcrumb"></ol>

                <!-- file manager view -->
                <table class="table table-hover table-condensed" id="filemanager"></table>

                <!-- message box -->
                <div id="msgbox"></div>
            </div>
        </div>
    </div>
</div>

<!-- Creates the bootstrap modal where the image will appear -->
<div class="modal modalnoajax fade" id="imagemodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="myModalLabel">Vista previa</h4>
            </div>
            <div class="modal-body text-center">
                <center>
                    <img src="" id="imagepreview" class="img-responsive" style="max-height:400px">
                </center>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
            </div>
        </div>
    </div>
</div>

<!-- new modal -->
<div class="modal modalnoajax fade" id="new">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="#" method="post">
                <div class="modal-header">
                    <h3>Nueva carpeta</h3>
                </div>
                <div class="modal-body">
                    <input type="hidden" id="new-type" />
                    <label for="new-path">Ingrese un nombre</label>
                    <input type="text" class="form-control" id="new-path" />
                </div>
                <div class="modal-footer">
                    <button class="submit btn btn-primary" type="submit"><i class="fa fa-check"></i></button>
                    <button class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i></button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- move modal -->
<div class="modal modalnoajax fade" id="move">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Move / Rename</h3>
            </div>
            <div class="modal-body">
                <label for="move-src">From</label>
                <input type="text" class="form-control" id="move-src" />
                <label for="move-dst">To</label>
                <input type="text" class="form-control" id="move-dst" />
            </div>
            <div class="modal-footer">
                <a class="submit btn btn-primary" data-dismiss="modal"><i class="fa fa-check"></i></a>
                <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- remove modal -->
<div class="modal modalnoajax fade" id="remove">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Eliminar</h3>
            </div>
            <div class="modal-body">
                <label for="remove-path">Eliminar este archivo / carpeta</label>
                <input type="text" class="form-control" id="remove-path" disabled />
            </div>
            <div class="modal-footer">
                <a class="submit btn btn-danger" data-dismiss="modal"><i class="fa fa-check"></i></a>
                <a class="btn btn-default" data-dismiss="modal"><i class="fa fa-times"></i></a>
            </div>
        </div>
    </div>
</div>

<!-- upload modal -->
<div class="modal modalnoajax fade" id="upload">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Subir archivos</h3>
            </div>
            <div class="modal-body">
                <form action="{{ path('zerobundle_admin_api_browser_upload') }}"
                    class="dropzone"
                    id="my-awesome-dropzone">
                    <input id="upload-path" type="hidden" name="data" value="">
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-default" data-dismiss="modal">Cerrar</a>
            </div>
        </div>
    </div>
</div>
